# =========================================
# App
# =========================================
NODE_ENV=development
APP_PORT=3000
APP_ORIGIN=http://localhost:3000
SESSION_SECRET=random_string_here

# =========================================
# PostgreSQL (Neon)
# =========================================
POSTGRES_URL=postgresql://your_database_user:your_database_password@your-neon-hostname/your_database_name?sslmode=require&channel_binding=require
POSTGRES_SSL=true
POSTGRES_SSL_REJECT_UNAUTHORIZED=false

# =========================================
# MSSQL (SQL Server)
# =========================================
MSSQL_SERVER=your_sql_server_host
MSSQL_PORT=1433
MSSQL_DATABASE=your_database_name
MSSQL_USER=your_username
MSSQL_PASSWORD=your_password
MSSQL_TRUST_SERVER_CERTIFICATE=true
MSSQL_ENCRYPT=true

# =========================================
# Email (later - safe to stub now)
# =========================================
EMAIL_SEND_ENABLED=false
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.yourprovider.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_FROM=no-reply@yourdomain.com
DECISION_EMAIL_ENABLED=false
MAX_EXTRA_HOURS_PER_REQUEST_HOURS=12
MAX_TIME_OFF_DURATION_HOURS=336
ENFORCE_TIMEOFF_OVERLAP=false

# =========================================
# Google Calendar (Domain-Wide Delegation)
# =========================================
# Paste the full JSON for your service account with domain-wide delegation enabled.
GOOGLE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"your_project","private_key_id":"your_key_id","private_key":"-----BEGIN PRIVATE KEY-----\\nREPLACE_WITH_YOUR_KEY\\n-----END PRIVATE KEY-----\\n","client_email":"service-account@your-project.iam.gserviceaccount.com","client_id":"your_client_id","token_uri":"https://oauth2.googleapis.com/token"}
